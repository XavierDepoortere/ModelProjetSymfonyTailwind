        </div>
        <div class="sm:col-span-3">
          <label for="Repeat Password" class="block text-sm font-medium leading-6 text-gray-900">Confirmation mot de passe</label>
          <div class="mt-2">
           {{ form_row(participantForm.password.second, {'attr': {'class': 'px-2 py-1 border rounded focus:outline-none focus:border-blue-500'}, 'label': false, 'required': false}) }}
          </div>
        </div>
      </div>
